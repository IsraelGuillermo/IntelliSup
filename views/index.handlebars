<main>

    <section class="section">
        <div class="container">
            <div class="columns is-vcentered">

                <!-- Short Description -->
                <div class="column is-one-third">
                    <div class="has-background-primary box">

                        <!-- Sources, links, and sharing section -->
                        <div class="columns">
                            <div class="column is-12">
                                <div class="has-background-white box">
                                    <p class="title is-5">Are you tired of constantly having to track down shipping
                                        information for all of
                                        your
                                        purchase orders?</p>

                                    <p class="title is-5">So many Suppliers! So many Buyers!</p>

                                    <p class="title is-5">There has to be a better way, right?!</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Supply Chain Simplified Graphic -->
                <div class="column is-one-third">
                    <div class="has-background-white">

                        <figure class="image center">
                            <img src="./images/intellisup_homepage_icon.png" alt="Intellisup: Supply Chain">
                        </figure>

                    </div>
                </div>

                <!-- Tabbed Sign Up & Login Forms -->
                <div class="column is-one-third">
                    <div class="has-background-primary box">
                        <div class="columns">
                            <div class="column is-12 tabs is-fullwidth is-boxed">
                                <div class="has-background-white box">

                                    <!-- Sign Up & Login Tabs -->
                                    <ul>
                                        <li class="is-active"><a>Sign Up</a></li>
                                        <li><a>Login</a></li>
                                    </ul>

                                    <div class="column is-12">

                                        <!-- Sign Up Form -->
                                        <div class="tab-content is-active">
                                            <form method="post" action="/api/signup" id="signup1" class="box">
                                                <h3 class="title is-4">Sign Up</h3>
                                                <div class="field">
                                                    <label class="label">Email</label>
                                                    <div class="control has-icons-left">
                                                        <input type="email" name="email" id="email-input"
                                                            placeholder="sampleEmail@email.com" class="input"
                                                            required />
                                                        <span class="icon is-small is-left">
                                                            <i class="fa fa-envelope"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="field">
                                                    <label class="label">Password</label>
                                                    <div class="control has-icons-left">
                                                        <input name="password" type="password" id="password-input"
                                                            placeholder="**********" class="input" required />
                                                        <span class="icon is-small is-left">
                                                            <i class="fa fa-lock"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="field">
                                                    <button type="submit" class="button is-success">
                                                        Sign Up
                                                    </button>
                                                </div>
                                            </form>
                                        </div>

                                        <!-- Login Form -->
                                        <div class="tab-content">
                                            <form method="post" action="/api/login" class="box">
                                                <h4 class="title is-4">Login</h4>
                                                <div class="field">
                                                    <label class="label">Email</label>
                                                    <div class="control has-icons-left">
                                                        <input type="email" name="email" id="email-input"
                                                            placeholder="sampleEmail@email.com" class="input"
                                                            required />
                                                        <span class="icon is-small is-left">
                                                            <i class="fa fa-envelope"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="field">
                                                    <label class="label">Password</label>
                                                    <div class="control has-icons-left">
                                                        <input type="password" name="password" id="password-input"
                                                            placeholder="**********" class="input" required />
                                                        <span class="icon is-small is-left">
                                                            <i class="fa fa-lock"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="field">
                                                    <button type="submit" class="button is-success">Login</button>
                                                </div>
                                            </form>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

